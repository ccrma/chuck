% this command has to be used in order make the chuck operator show up
\newcommand{\chuckop}{=\textgreater~}

\newcommand{\atchuckop}{@=\textgreater~}

\newcommand{\unchuckop}{=\textless~}

\newcommand{\unchuckopp}{!=\textgreater~}

\newcommand{\upchuckop}{=\^~}

% some smaller functions for \chuckfunction
\newcommand{\function}{ \textcolor{functionnames}
{\begin{ensuremath}[\end{ensuremath} function \begin{ensuremath}]\end{ensuremath} }}
\newcommand{\chuckfunctiontext}[1]{\function #1}

% use this command for namespace titles
\newcommand{\chucknamespace}[1]{{\LARGE \textcolor{functionnames}{namespace: #1}  }}

% use this command for making the functions
% puts a nice box around them and prints the word function
\newcommand{\chuckfunction}[1]{
    \colorbox{functionboxcolor}{\parbox{\textwidth}{\chuckfunctiontext{#1}}}
}

\newcommand{\chuckmultifunction}[2]{
   \colorbox{functionboxcolor}{\parbox{6.5in}{\chuckfunctiontext{#1}\newline
\colorbox{otherfunctionboxcolor}{\parbox{6.43in}{#2}}}}     
}
